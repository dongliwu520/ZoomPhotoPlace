<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="208dp">

        <com.zoom.photoplace.carousellayout.widget.customshape.CustomShapeImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="208dp"
            android:src="@mipmap/img_home_default_bg"
            android:scaleType="fitXY"
            app:onlyDrawBorder="false"
            app:leftTopRadius="10dp"
            app:rightTopRadius="10dp"
            app:leftBottomRadius="10dp"
            app:rightBottomRadius="10dp"
            app:shape="rectangle"/>

        <TextView
            android:id="@+id/tv50"
            android:layout_width="150dp"
            android:layout_height="208dp"
            android:background="@drawable/bg_film_transparency50"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv70"
            android:layout_width="150dp"
            android:layout_height="208dp"
            android:background="@drawable/bg_film_transparency70"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>

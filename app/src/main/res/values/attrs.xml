<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcContainer">
        <attr name="orignalHeight" format="dimension" />
        <attr name="arc_height" format="dimension" />
    </declare-styleable>
    <!-- 自定义圆角ImageView -->
    <declare-styleable name="CustomShapeImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="arc" value="3" />
        </attr>
        <attr name="imageBorderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="roundRadius" format="dimension" />
        <attr name="leftTopRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
        <attr name="leftBottomRadius" format="dimension" />
        <attr name="onlyDrawBorder" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FilmTextView">
        <attr name="ft_textColor" format="color" />
        <attr name="ft_textNumViewSize" format="dimension" />
        <attr name="ft_textOtherViewSize" format="dimension" />
        <attr name="ft_textNum" format="string" />
        <attr name="ft_textOther" format="string" />
    </declare-styleable>

</resources>
